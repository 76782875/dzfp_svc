<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rjxx.taxeasy.dao.YanzhengmaMapper">

    <select id="findOneByParams" parameterType="map" resultType="yanzhengma">
        select * from t_yanzhengma
        <if test="orderBy != null">
            order by ${orderBy}
        </if>
        limit 1
    </select>

    <select id="findAllByParams" parameterType="map" resultType="yanzhengma">
        select * from t_yanzhengma
        <if test="orderBy != null">
            order by ${orderBy}
        </if>
    </select>

    <select id="findByPage" parameterType="pagination" resultType="yanzhengma">
        select * from t_yanzhengma
        <if test="params.orderBy != null">
            order by ${params.orderBy}
        </if>
    </select>
	<select id="findBySql" parameterType="map" resultType="yanzhengma">
		select * from t_yanzhengma
		where TIMESTAMPDIFF(SECOND,lrsj, now()) &lt;=600
		<if test="phone != null">
			and phone=#{phone}
		</if>
		<if test="code != null">
			and code=#{code}
		</if>
		
		ORDER BY lrsj desc
		LIMIT 1
		
	</select>
</mapper>

